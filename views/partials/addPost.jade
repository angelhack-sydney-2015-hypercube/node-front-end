.ibox-content
  form.form-horizontal(action='#')
    .form-group
      label.col-sm-2.control-label(for='location') Location: 
      .col-sm-10
        input.form-control(ng-model='form.location', name='location')
    .hr-line-dashed
    .form-group
      label.col-sm-2.control-label(for='time') Time: 
      .col-sm-10
        input.form-control(ng-model='form.time', name='time')
    .hr-line-dashed
    .form-group
      label.col-sm-2.control-label(for='note') Note: 
      .col-sm-10
        input.form-control(ng-model='form.note', name='note')
    .hr-line-dashed
    .form-group
      label.col-sm-2.control-label(for='person') Person: 
      .col-sm-10
        input.form-control(ng-model='form.person', name='person')
    .hr-line-dashed
    .form-group
      label.col-sm-2.control-label(for='door') Device: 
      .col-sm-10
        input.form-control(ng-model='form.door', name='door')
    .hr-line-dashed
    .form-group
      .col-sm-4.col-sm-offset-2
        button.btn.btn-primary(ng-click='submitPost()') Save shift 
